{
  "name": "shep",
  "version": "0.0.2",
  "description": "A framework for building APIs with AWS API Gateway and Lambda",
  "main": "lib/index.js",
  "scripts": {
    "compile": "./node_modules/.bin/babel -d lib/ src/",
    "test": "ava",
    "lint": "jshint --exclude ./node_modules .",
    "prepublish": "npm run compile"
  },
  "keywords": [
    "serverless",
    "serverless framework",
    "api gateway",
    "lambda",
    "aws",
    "aws lambda",
    "amazon",
    "amazon web services",
    "shepherd",
    "shep",
    "lambda framework"
  ],
  "author": "Steve Faulkner <steve@bustle.com>",
  "license": "ISC",
  "repository": {
    "type": "git",
    "url": "https://github.com/bustlelabs/shepherd"
  },
  "bin": {
    "shep": "lib/cli.js"
  },
  "dependencies": {
    "aws-sdk": "southpolesteve/aws-sdk-js#patch-1",
    "babel-core": "^6.4.5",
    "babel-register": "^6.5.2",
    "bluebird": "^2.10.0",
    "fs-extra": "^0.26.4",
    "fs-extra-promise": "^0.3.1",
    "glob": "^7.0.0",
    "inquirer": "^0.11.3",
    "lodash": "^4.7.0",
    "minimist": "^1.2.0",
    "observatory": "^1.0.0",
    "pkg-conf": "^1.1.1",
    "pkg-up": "^1.0.0",
    "read-pkg-up": "^1.0.1",
    "resolve": "^1.1.7"
  },
  "devDependencies": {
    "ava": "^0.13.0",
    "babel-cli": "^6.5.1",
    "babel-preset-es2015": "^6.3.13",
    "mockery": "bustlelabs/mockery",
    "sinon": "^1.16.1",
    "sinon-chai": "^2.8.0",
    "testdouble": "^1.2.0"
  },
  "babel": {
    "presets": [
      "es2015"
    ]
  },
  "ava": {
    "require": [
      "babel-register"
    ]
  }
